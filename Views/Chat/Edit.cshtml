@model XChat.Models.Chat

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Chat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChatID" />
            <div class="form-group">
                <label asp-for="SenderID" class="control-label"></label>
                <input asp-for="SenderID" class="form-control" />
                <span asp-validation-for="SenderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientID" class="control-label"></label>
                <input asp-for="RecipientID" class="form-control" />
                <span asp-validation-for="RecipientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SendDate" class="control-label"></label>
                <input asp-for="SendDate" class="form-control" />
                <span asp-validation-for="SendDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Read" class="control-label"></label>
                <input asp-for="Read" class="form-control" />
                <span asp-validation-for="Read" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
